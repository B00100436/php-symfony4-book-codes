{% extends 'base.html.twig' %}

    {% block body %}
        <h1>Student LIST page</h1>

        <a href="{{ path('student_new')}}">
            create NEW student
        </a>
        <hr>
        {# ------------------------------------------------ #}

        <ul>
            {% for student in students %}
                <li
                    {% if highlightId is defined %}
                        {% if student.id == highlightId %}
                            class="highlight"
                        {% endif %}
                    {% endif %}
                >
                    id = {{ student.id }}
                    <br>
                    name = {{ student.firstName }} {{ student.surname }}
                    <br>
                    <a href="{{ url('student_show', {id : student.id} ) }}">(details)</a>
                    <br>
                    <a href="{{ url('student_delete', {id : student.id} ) }}">(DELETE)</a>

                </li>
            {% endfor %}
        </ul>


    {% endblock %}